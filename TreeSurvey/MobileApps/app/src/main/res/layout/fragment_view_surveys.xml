<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_View_Surveys"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.server_status.View_SurveysFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_LCurrentTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Table :" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/tv_View_CurrentTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="TextView" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_DisplaySurveys"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:isScrollContainer="true"
            android:nestedScrollingEnabled="true"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbars="vertical"
            tools:itemCount="16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            tools:layout_editor_absoluteY="507dp" />

        <TextView
            android:id="@+id/tv_VIewSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Survey"
            tools:layout_editor_absoluteY="527dp" />

        <Spinner
            android:id="@+id/dd_vf_ViewSurveys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="546dp" />

        <Button
            android:id="@+id/btn_ViewSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Survey"
            tools:layout_editor_absoluteY="570dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_NewSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Survey"
            tools:layout_editor_absoluteY="638dp" />

        <Button
            android:id="@+id/btn_NewSurvey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Survey"
            tools:layout_editor_absoluteY="658dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            tools:layout_editor_absoluteY="618dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>